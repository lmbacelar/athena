= simple_form_for @user, url: user_activation_path(params[:id]), html: {class: 'form-horizontal'} do |f|
  %fieldset
    %legend= "#{t('actions.activate')} #{User.model_name.human}"
    %p
      = render @user
    .form-actions
      = f.button :submit, t('actions.activate'), class: 'btn-primary'
      = link_to t('actions.cancel'), root_path, class: 'btn'
