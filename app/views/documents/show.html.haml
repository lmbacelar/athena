%p
  %h1= @document.name
%p
  %h2= @document.title
  %h3= @document.subtitle
%p
  %strong Description
  %br= @document.description

.form-actions
  = link_to 'Back', documents_path, class: 'btn'
  = link_to 'Edit', edit_document_path(@document), class: 'btn'
  = link_to 'Destroy', @document, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger'
