= simple_form_for @document, html: {class: 'form-horizontal'} do |f|
  %fieldset
    %legend= "#{controller.action_name.capitalize} Document"

    = f.input :name, input_html: { class: 'span3' }
    = f.input :title, input_html: { class: 'span5' }
    = f.input :subtitle, input_html: { class: 'span5' }
    = f.input :description, input_html: { class: 'span5', rows: '5' }

    .form-actions
      = f.button :submit, class: 'btn btn-primary'
      = link_to 'Cancel', documents_path, class: 'btn'
